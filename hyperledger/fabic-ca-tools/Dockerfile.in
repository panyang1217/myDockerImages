FROM ubuntu:18.04
RUN /bin/sh -c 'curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && curl -o /etc/apt/sources.list.d/microsoft.list https://packages.microsoft.com/config/ubuntu/18.04/prod.list && apt-get update && apt-get install -y powershell'